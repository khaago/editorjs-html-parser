{ 
  "compilerOptions":{ 
     "target":"es6",
     "moduleResolution":"node",
     "module":"commonjs",
     "declaration":true,
     "noLib":false,
     "emitDecoratorMetadata":true,
     "experimentalDecorators":true,
     "sourceMap":true,
     "pretty":true,
     "allowUnreachableCode":false,
     "allowUnusedLabels":true,
     "noImplicitAny":true,
     "noImplicitReturns":false,
     "noImplicitUseStrict":false,
     "outDir":"dist/",
     "baseUrl":"src/",
     "listFiles":false,
     "noEmitHelpers":true
  },
  "include":[ 
    "src/**/*",
    "src/app/shared/**/*",
    "typings/*.d.ts"
  ],
  "exclude":[ 
      "node_modules",
       "jspm_packages",
       "application", 
       "system",
       "dist"
  ],
  "compileOnSave":false
}